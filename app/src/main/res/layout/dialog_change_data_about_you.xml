<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/button_pressed">

    <TextView
        android:id="@+id/tvChangeDataAboutYou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tvIncorrectData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvChange"
        android:gravity="center"
        android:text="incorrect data"
        android:textColor="#FF3333"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/etChangeDataAboutYouValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvChange"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/btnChangeDataAboutYouOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_not_pressed"
            android:text="OK"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="30dp"/>

        <Button
            android:id="@+id/btnChangeDataAboutYouCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_not_pressed"
            android:text="Cancel"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

</LinearLayout>