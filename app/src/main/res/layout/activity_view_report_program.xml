<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.ViewReportProgram"
    android:orientation="vertical"
    android:background="@drawable/background_cat">

    <TextView
        android:id="@+id/tvClassSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Class schedule"
        android:textSize="35sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/tvClassSchedule"
        android:layout_marginTop="50dp">

        <TableLayout
            android:id="@+id/tableLayoutViewReportProgram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <Button
            android:id="@+id/btnFinishTraining"
            android:layout_width="170dp"
            android:layout_height="72dp"
            android:alpha="0.8"
            android:background="@drawable/button_not_pressed"
            android:text="Finish training" />
    </LinearLayout>

</RelativeLayout>